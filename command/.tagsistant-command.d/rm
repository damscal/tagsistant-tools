#! /bin/sh
## remove file from tagsistant
 
if [ $# -eq 0 ] 
then 
     echo "usage rm <file>*"
     exit
fi

# get mount point
directoryName=`dirname $0`
mountPoint=`${directoryName}/root`

# get files to remove
files=$@

for file in ${files}
do
    query=""
    fileName=${file##*/}
    index=0
    for tag in `${directoryName}/tags ${file}`
    do
        # if tag happens to be an empty string, skip it
        [ -z "${tag}" ] && continue
        # process triple tags
        if echo "${tag}" | grep -qE ":.*="; then
            tag=`echo "${tag}" | sed 's/:/:\//; s/=/\/eq\//'`  
        fi
        # if we are at the first tag...
        if [ "$index" -eq 0 ]; then
            query="${tag}"
        else
	        query="${query}/${tag}"
        fi
        index=`expr $index + 1`
    done
    rm ${mountPoint}/store/${query}/@/${fileName} -r
done
